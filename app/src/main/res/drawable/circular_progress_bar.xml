<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270" >

            <shape
                android:innerRadius="@dimen/progressbar_inner_radius"
                android:shape="ring"
                android:thickness="@dimen/progressbar_thickness"
                android:useLevel="true" >
                <gradient
                    android:angle="0"
                    android:startColor="@color/progress_start"
                    android:centerColor="@color/progress_center"
                    android:endColor="@color/progress_end"
                    android:type="sweep"
                    android:useLevel="false" />
            </shape>



        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270" >
            <shape
                android:innerRadius="@dimen/progressbar_inner_radius_shadow"
                android:shape="ring"
                android:thickness="@dimen/progressbar_thickness_shadow"
                android:useLevel="true"
                >
                <solid android:color="@color/progress_bar_shadow" />
            </shape>
        </rotate>
    </item>


</layer-list>